<!-- Page-specific hero -->
<header class="hero contact-hero">
    <div class="hero-content">
        <h1>Get in Touch</h1>
        <p>We'd love to hear from you!</p>
    </div>
</header>

<main class="container">
    <section class="content-columns">
        <article class="content-main" id="contact-content-area">
            <h2>Send us a Message</h2>
            <p>
                For any inquiries, feedback, or spiritual guidance, please fill
                out the form below.
            </p>

            <form
                id="contact-form"
                class="contact-form"
                hx-post="/contact"
                hx-target="#contact-content-area"
                hx-swap="innerHTML"
                hx-indicator="#loading-indicator"
            >
                <input type="hidden" name="deleted" value="false" />
                <div class="form-group">
                    <label for="name">Your Name</label>
                    <input type="text" id="name" name="name" required />
                    <div class="validation-error" data-field="name"></div>
                </div>

                <div class="form-group">
                    <label for="email">Your Email</label>
                    <input type="email" id="email" name="email" required />
                    <div class="validation-error" data-field="email"></div>
                </div>

                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" id="subject" name="subject" />
                    <div class="validation-error" data-field="subject"></div>
                </div>

                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea
                        id="message"
                        name="message"
                        rows="5"
                        required
                    ></textarea>
                    <div class="validation-error" data-field="message"></div>
                </div>

                <button type="submit" class="btn">Send Message</button>
                <span id="loading-indicator" class="htmx-indicator">
                    Sending...</span>
                <!-- Optional: Add styling to hide by default -->
            </form>

            <div
                id="contact-form-general-error"
                class="form-response error"
                style="display: none;"
            ></div>

        </article>

        <aside class="content-sidebar">
            <div class="contact-info">
                <h3>Contact Information</h3>
                <p>
                    <strong>Email:</strong>
                    <a href="mailto:info@mysticweb.com">{{contact_email}}</a>
                </p>
                <p><strong>Phone:</strong>{{contact_phone}}</p>

            </div>
        </aside>
    </section>
</main>