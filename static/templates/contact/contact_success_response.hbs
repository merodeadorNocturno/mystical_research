<!-- mystical_research/static/templates/partials/contact_success_response.hbs -->
<div class="form-response success">
    <h3>Thank You!</h3>
    <p>Your message has been sent successfully. We appreciate you reaching out
        and will get back to you if required.</p>
    <!-- Optional: Add a link back home or to another relevant page -->
    <!-- <p><a href="/">Return to Homepage</a></p> -->
</div>

<form
    id="contact-form"
    class="contact-form"
    hx-post="/contact"
    hx-target="#contact-content-area"
    hx-swap="innerHTML"
    hx-indicator="#loading-indicator"
>
    <input type="hidden" name="deleted" value="false" />
    <div class="form-group">
        <label for="name">Your Name</label>
        <input type="text" id="name" name="name" required />
        <div class="validation-error" data-field="name"></div>
    </div>

    <div class="form-group">
        <label for="email">Your Email</label>
        <input type="email" id="email" name="email" required />
        <div class="validation-error" data-field="email"></div>
    </div>

    <div class="form-group">
        <label for="subject">Subject</label>
        <input type="text" id="subject" name="subject" />
        <div class="validation-error" data-field="subject"></div>
    </div>

    <div class="form-group">
        <label for="message">Message</label>
        <textarea id="message" name="message" rows="5" required></textarea>
        <div class="validation-error" data-field="message"></div>
    </div>

    <button type="submit" class="btn">Send Message</button>
    <span id="loading-indicator" class="htmx-indicator">
        Sending...</span>
    <!-- Optional: Add styling to hide by default -->
</form>

<div
    id="contact-form-general-error"
    class="form-response error"
    style="display: none;"
></div>